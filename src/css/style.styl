html
  height 100%

body
  margin 0
  height 100%

div#input
  position absolute
  border solid 2px darkgray
  border-radius 4px
  left 10px
  top 10px
  font-family sans-serif
  color dimgray
  padding 20px
  background-color white
  margin 10px
  height 110px

div#steps
  height 100%
  width 100%
  display flex
  align-items center
  justify-content center
  flex-direction column

.container
  position absolute
  left 0
  top 0
  height 100%
  width 100%
  display flex
  align-items center
  justify-content center
  flex-direction column
  pointer-events none

  div
    position relative
    pointer-events all


input[type=text]
  font-size 28px
  width 100%
  box-sizing border-box

.blue
  fill blue

.button-row
  line-height 30px

#context-menu button
  display none

g.selection-overlay.active
  circle, rect
    fill transparent

  circle:hover, circle.selected
    fill rgba(255,255,0,0.5)

  rect:hover, rect.selected
    fill rgba(255,0,255,0.5)
