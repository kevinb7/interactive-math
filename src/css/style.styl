@import 'nib'
@import 'svg'
@import 'context_menu'

html
  height 100%

body
  margin 0
  height 100%

div#steps
  height 100%
  width 100%
  display flex
  align-items center
  justify-content center
  flex-direction column

.main
  display flex
  flex-direction column
  height 100%

.header
  background-color #808080
  font-size 32px
  font-weight 100
  font-family sans-serif
  color white
  padding 5px 10px
  flex-shrink 0

.body
  display flex
  flex-direction row
  flex-grow 1

.math-content
  flex-grow 1
  position relative
  font-size 300%

.menus
  width 150px
  flex-shrink 0
  display flex
  flex-direction column
  background-color rgb(0,164,164)

  div
    font-size 18px
    font-family sans-serif
    font-weight 100
    color white

.menus ul
  padding 0
  margin 5px 0
  list-style-type none

  li
    padding 10px 20px

  li:hover
    cursor pointer

  li#input
    display none

.global-menu
  height 100%
  background-color rgb(0,192,192)
  flex-grow 0
  flex-shrink 0


.content-container
  position absolute
  left 0
  top 0
  height 100%
  width 100%
  display flex
  align-items center
  justify-content center
  flex-direction column
  pointer-events none
  overflow hidden

  svg
    pointer-events all

input[type=text]
  box-sizing border-box
  font-size 22px
  width 100%
  border 1px gray
  margin 5px 0px

input:focus
  outline none

.blue
  fill blue
