@import 'nib'
@import 'svg'

html
  height: 100%

body
  height: 100%
  margin: 0
  overflow: hidden

.app
  display flex
  flex-direction column
  height 100%
  background-color lightyellow
  font-family sans-serif
  font-weight 100

.math-content
  flex-shrink 0
  margin 20px 0
  padding 5px
  background-color white
  box-shadow 0 0 5px rgba(0,0,0,0.25)
  height 64px

  .content-container
    display flex
    font-size: 32px
    width 100%
    height 64px
    position absolute
    align-items center
    justify-content center

.buttons
  display flex
  flex-direction row
  flex 1 0

.contextual-buttons
  flex 1 0
  background-color rgb(0,128,128)
  width 50%

  li
    display none

.global-buttons
  flex 1 0
  background-color rgb(0,192,192)
  width 50%

ul
  list-style none
  padding 0
  margin 0

li
  color: white
  padding: 14px
  font-size: 22px

.buttons
  box-shadow 0 0 5px rgba(0,0,0,0.25)

.textbox
  display flex
  flex-shrink 0
  box-shadow 0 0 5px rgba(0,0,0,0.25)
  margin-bottom 20px
  padding 0

  input[type="text"]
    flex-grow 1
    font-size 18px
    border none
    background-color white
    padding 10px
    margin 0

  div
    flex-shrink 0
    font-size 22px
    padding 7px 12px
    background-color grey
    color white

input:focus
  outline: none
